{
  "client": {
    "registry_file": "mcp_registry.json",
    "api_key": "your-api-key-here",
    "base_url": "https://dashscope.aliyuncs.com/compatible-mode/v1",
    "model": "qwen-plus"
  },
  "discovery": [
    {
      "type": "file_watch",
      "file_path": "discovered_servers.json",
      "interval": 10,
      "description": "监控本地配置文件变化"
    },
    {
      "type": "http_polling",
      "url": "http://localhost:9000/api/servers",
      "interval": 60,
      "description": "从HTTP端点轮询服务器列表"
    }
  ],
  "health_check": {
    "interval": 60,
    "timeout": 10,
    "retry_count": 3,
    "cleanup_threshold": 3600
  },
  "servers": [
    {
      "name": "weather_service",
      "url": "http://localhost:8001",
      "description": "天气查询和预报服务",
      "tags": ["weather", "api", "forecast"],
      "priority": 10,
      "auto_connect": true,
      "health_check_url": "http://localhost:8001/health",
      "metadata": {
        "version": "1.0.0",
        "provider": "WeatherAPI",
        "capabilities": ["current_weather", "forecast", "alerts"]
      }
    },
    {
      "name": "file_manager",
      "url": "http://localhost:8002",
      "description": "文件管理和操作服务",
      "tags": ["file", "storage", "management"],
      "priority": 8,
      "auto_connect": true,
      "health_check_url": "http://localhost:8002/health",
      "metadata": {
        "version": "2.1.0",
        "provider": "FileSystem",
        "capabilities": ["read_file", "write_file", "list_directory", "search"]
      }
    },
    {
      "name": "database_service",
      "url": "http://localhost:8003",
      "description": "数据库查询和操作服务",
      "tags": ["database", "sql", "query"],
      "priority": 9,
      "auto_connect": false,
      "health_check_url": "http://localhost:8003/health",
      "metadata": {
        "version": "3.0.0",
        "provider": "PostgreSQL",
        "capabilities": ["query", "insert", "update", "delete", "schema"]
      }
    },
    {
      "name": "ai_assistant",
      "url": "http://localhost:8004",
      "description": "AI助手和自然语言处理服务",
      "tags": ["ai", "nlp", "assistant"],
      "priority": 7,
      "auto_connect": true,
      "health_check_url": "http://localhost:8004/health",
      "metadata": {
        "version": "1.5.0",
        "provider": "OpenAI",
        "capabilities": ["chat", "summarize", "translate", "analyze"]
      }
    }
  ],
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file": "mcp_dynamic.log"
  },
  "features": {
    "auto_discovery": true,
    "health_monitoring": true,
    "auto_reconnect": true,
    "cleanup_offline_servers": true,
    "save_registry": true
  }
}